.flex-row {
  display: flex;
  flex-direction: row;
  align-items: center;
}

.flex-row-start {
  @extend .flex-row;
  justify-content: flex-start;
}

.flex-row-end {
  @extend .flex-row;
  justify-content: flex-end;
}

.flex-row-between {
  @extend .flex-row;
  justify-content: space-between;
}


.inline-flex-row {
  display: inline-flex;
  flex-direction: row;
  align-items: center;
}

